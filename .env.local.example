# Database
DATABASE_URL="postgresql://user:password@localhost:5432/tradingview_ai?schema=public"

# Firebase Client (Public - prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Firebase Admin SDK (Server-side only)
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----\n"

# External APIs
CHART_IMG_KEY="your-chart-img-api-key"
OPENAI_KEY="sk-your-openai-api-key"
DEEPSEEK_KEY="sk-your-deepseek-api-key"
GEMINI_KEY="your-gemini-api-key"
CLAUDE_KEY="your-claude-api-key"

# Encryption
# Generate with: openssl rand -hex 32
ENCRYPTION_KEY="your-64-character-hex-string-here"

# Telegram Bot
# IMPORTANT: Bot token should NOT include the "bot" prefix
# Get from @BotFather - it will look like: 1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_BOT_TOKEN="1234567890:ABCdefGHIjklMNOpqrsTUVwxyz"
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME="YourBotUsername"

# Automation
ENABLE_AUTOMATION="true"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Stripe (for subscriptions)
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="whsec_your-webhook-secret"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# Stripe Product IDs
STRIPE_BASIC_PRICE_ID="price_basic_monthly"
STRIPE_PRO_PRICE_ID="price_pro_monthly"
STRIPE_PREMIUM_PRICE_ID="price_premium_monthly"

# Logging Configuration
LOG_LEVEL=debug
LOG_ENABLE_CONSOLE=true
LOG_ENABLE_FILE=true
LOG_FILE_PATH=./logs
LOG_MAX_FILE_SIZE=20m
LOG_MAX_FILES=14
LOG_PRETTY_PRINT=true
LOG_REMOTE_ENDPOINT=

# AI Provider Configuration
# Set to "false" to disable a specific provider
# Note: DeepSeek currently doesn't support vision/image analysis for chart evaluation
# It will provide text-based placeholder responses until vision API is available
# For accurate chart analysis, keep ENABLE_OPENAI="true"
ENABLE_OPENAI="true"
ENABLE_DEEPSEEK="false"  # Set to "true" only if you want placeholder responses
ENABLE_GEMINI="true"
ENABLE_CLAUDE="true"

# Application Limits
# Maximum number of layouts allowed per symbol per user
MAX_LAYOUTS_PER_SYMBOL=4
# Maximum number of snapshots allowed per layout
MAX_SNAPSHOTS_PER_LAYOUT=4